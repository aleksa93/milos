@model IEnumerable<WebApplication1.Models.Oglas>

@{
    ViewBag.Title = "Moji oglasi";
}

<h2>Moji oglasi</h2>

<p>
    @Html.ActionLink("Napravite novi oglas", "NoviOglas")
</p>



<table class="table">
    <tr>
        <th>
            Naslov
        </th>
        <th>
            Cena
        </th>
        <th>
            Datum postavljanja
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Naslov)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Cena)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Datum)
            </td>
            <td>
                @Html.ActionLink("Pogledaj detalje", "MojiOglasiDetaljno", new { id = item.IDOglas })
            </td>
        </tr>
    }

</table>